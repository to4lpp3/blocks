{
  "private": true,
  "name": "blocks",
  "scripts": {
    "start": "yarn workspace demo start"
  },
  "workspaces": [
    "packages/*",
    "demo"
  ],
  "devDependencies": {
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --parser flow --single-quote --no-semi --write",
      "git add"
    ]
  }
}
